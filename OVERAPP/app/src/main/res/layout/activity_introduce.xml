<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.overapp.Introduce">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="170dp"
            android:background="#01d3ae">

            <TextView
                android:id="@+id/shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingBottom="15dp"
                android:text="fdfdfdfdf"
                android:textSize="25dp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/shoppic"
                android:layout_toEndOf="@+id/shoppic" />

            <ImageView
                android:id="@+id/shoppic"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/ic_launcher" />


            <TextView
                android:id="@+id/shopaddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="12323"
                android:paddingTop="30dp"
                android:textSize="22dp"
                android:layout_above="@+id/btn_like"
                android:layout_toRightOf="@+id/shoppic"
                android:layout_toEndOf="@+id/shoppic" />


            <Button
                android:id="@+id/shop_go"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="sdfsdf" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LIKE"
                android:id="@+id/btn_like"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/shopaddress"
                android:layout_toStartOf="@+id/shopaddress" />


        </RelativeLayout>

    </LinearLayout>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:divider="#E8E8E8"
        android:dividerHeight="3px"></ListView>
</RelativeLayout>
