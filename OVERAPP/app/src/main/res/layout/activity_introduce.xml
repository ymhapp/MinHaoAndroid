<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.overapp.Introduce">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="190dp"
            android:background="#ff8400">

            <TextView
                android:id="@+id/shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/shoppic"
                android:layout_centerHorizontal="true"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text="fdfdfdfdf"
                android:textColor="#FFFFFF"
                android:textSize="22dp" />

            <ImageButton
                android:id="@+id/btn_like"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="#ff8400"
                android:src="@drawable/white" />

            <ImageView
                android:id="@+id/shoppic"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentTop="true"
                android:layout_below="@+id/btn_like"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_launcher" />


            <TextView
                android:id="@+id/shopaddress"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/shop_name"
                android:layout_centerHorizontal="true"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:focusableInTouchMode="true"
                android:focusable="true"
                android:scrollHorizontally="true"
                android:paddingTop="10dp"
                android:text="12323"
                android:textColor="#FFFFFF"
                android:textSize="22dp" />


            <Button
                android:id="@+id/shop_go"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="到这去" />


        </RelativeLayout>

    </LinearLayout>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:divider="#E8E8E8"
        android:dividerHeight="3px"></ListView>
</RelativeLayout>
